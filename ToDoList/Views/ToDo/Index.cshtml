@{
    ViewData["Title"] = "To Do List";
}
@model IndexModel

@using (Html.BeginForm("AddTask", "ToDo", FormMethod.Post))
{
    <div id="newtask">
        <input type="text" asp-for="TaskValidation.Title" name="TaskValidation.Title" class="text-input" placeholder="Add Tasks" required pattern="[A-Za-z0-9]+">
        <select class="text-select" asp-for="TaskValidation.CategoryId" name="TaskValidation.CategoryId">
            <option value="-1">Select a category</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <input type="datetime-local" asp-for="TaskValidation.Deadline" name="TaskValidation.Deadline" class="text-date" required>
        <button id="push">Add</button>
      
    </div>
    <div>
        <span asp-validation-for="TaskValidation.Title"></span>
        <span asp-validation-for="TaskValidation.CategoryId"></span>
        <span asp-validation-for="TaskValidation.Deadline"></span>
    </div>
}
